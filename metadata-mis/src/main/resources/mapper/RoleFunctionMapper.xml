<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.mingdong.mis.domain.mapper.RoleFunctionMapper">
    <resultMap id="BaseResultMap" type="RoleFunction">
        <id column="id" property="id" jdbcType="BIGINT" />
        <result column="create_time" property="createTime" jdbcType="TIMESTAMP" />
        <result column="update_time" property="updateTime" jdbcType="TIMESTAMP" />
        <result column="role_id" property="roleId" jdbcType="BIGINT" />
        <result column="privilege_id" property="privilegeId" jdbcType="BIGINT" />
    </resultMap>

    <insert id="addList" parameterType="List">
        insert into
            `role_function`
            (`create_time`, `update_time`, `role_id`, `privilege_id`)
        values
        <foreach collection="list" item="item" separator=",">
            (#{item.createTime}, #{item.updateTime}, #{item.roleId}, #{item.privilegeId})
        </foreach>
    </insert>

    <update id="updateSkipNull" parameterType="RoleFunction">
        update `role_function`
        <set>
            <if test="createTime != null">`create_time` = #{createTime},</if>
            <if test="updateTime != null">`update_time` = #{updateTime},</if>
            <if test="roleId != null">`role_id` = #{roleId},</if>
            <if test="privilegeId != null">`privilege_id` = #{privilegeId},</if>
        </set>
        where `id` = #{id}
    </update>

    <delete id="deleteByRole" parameterType="Long">
        delete from `role_function` where `role_id` = #{roleId}
    </delete>

    <select id="getByRole" parameterType="Long" resultMap="BaseResultMap">
        select `privilege_id` from `role_function` where `role_id` = #{roleId}
    </select>

</mapper>