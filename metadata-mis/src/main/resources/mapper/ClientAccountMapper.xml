<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.mingdong.mis.domain.mapper.ClientAccountMapper">
    <resultMap id="BaseResultMap" type="ClientAccount">
        <id column="id" property="id" jdbcType="BIGINT" />
        <result column="create_time" property="createTime" jdbcType="TIMESTAMP" />
        <result column="update_time" property="updateTime" jdbcType="TIMESTAMP" />
        <result column="balance" property="balance" jdbcType="DECIMAL" />
        <result column="enabled" property="enabled" jdbcType="TINYINT" />
    </resultMap>

    <sql id="select_all">
        select
            `id`, `create_time`, `update_time`, `balance`, `enabled`
        from `client_account`
    </sql>

    <insert id="add" parameterType="ClientAccount">
        insert into `client_account`
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">`id`,</if>
            <if test="createTime != null">`create_time`,</if>
            <if test="updateTime != null">`update_time`,</if>
            <if test="balance != null">`balance`,</if>
            <if test="enabled != null">`enabled`,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="id != null">#{id},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="balance != null">#{balance},</if>
            <if test="enabled != null">#{enabled},</if>
        </trim>
    </insert>

    <update id="updateById" parameterType="ClientAccount">
        update `client_account`
        set `create_time` = #{createTime},
            `update_time` = #{updateTime},
            `balance`     = #{balance},
            `enabled`     = #{enabled}
        where `id` = #{id}
    </update>

    <select id="findById" parameterType="Long" resultMap="BaseResultMap">
        <include refid="select_all" />
        where `id` = #{id}
    </select>
</mapper>