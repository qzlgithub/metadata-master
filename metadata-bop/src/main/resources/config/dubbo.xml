<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
            http://www.springframework.org/schema/beans/spring-beans.xsd
            http://code.alibabatech.com/schema/dubbo
            http://code.alibabatech.com/schema/dubbo/dubbo.xsd">

    <!-- 应用信息，用于计算依赖关系 -->
    <dubbo:application name="METADATA-BOP" />

    <!-- 注册中心服务地址 -->
    <dubbo:registry id="zookeeper" protocol="zookeeper" address="${dubbo.registry.address}" />

    <!--***************************************************************************-->
    <!-- consumer配置：生成远程服务代理，和本地bean一样调用 -->
    <dubbo:reference retries="0" timeout="5000" check="false" id="productApi"
                     interface="com.mingdong.core.service.RemoteProductService" />
    <dubbo:reference retries="0" timeout="5000" check="false" id="clientApi"
                     interface="com.mingdong.core.service.RemoteClientService" />
    <dubbo:reference retries="0" timeout="5000" check="false" id="managerApi"
                     interface="com.mingdong.core.service.RemoteManagerService" />
    <dubbo:reference retries="0" timeout="5000" check="false" id="statsApi"
                     interface="com.mingdong.core.service.RemoteStatsService" />
    <dubbo:reference retries="0" timeout="5000" check="false" id="systemApi"
                     interface="com.mingdong.core.service.RemoteSystemService" />
    <dubbo:reference retries="0" timeout="5000" check="false" id="tradeApi"
                     interface="com.mingdong.core.service.RemoteTradeService" />
</beans>