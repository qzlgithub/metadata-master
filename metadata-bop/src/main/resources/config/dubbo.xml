<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
            http://www.springframework.org/schema/beans/spring-beans.xsd
            http://code.alibabatech.com/schema/dubbo
            http://code.alibabatech.com/schema/dubbo/dubbo.xsd">

    <!-- 应用信息，用于计算依赖关系 -->
    <dubbo:application name="METADATA-BOP" />

    <!-- 注册中心服务地址 -->
    <dubbo:registry id="zookeeper" protocol="zookeeper" address="${dubbo.registry.address}" />

    <!-- 用dubbo协议在指定端口暴露服务 -->
    <dubbo:protocol name="dubbo" port="${dubbo.protocol.port}" dispather="all" threadpool="cached" threads="5000" />

    <!-- 声明需要暴露的服务接口 -->
    <!-- version="1.0" registry="zookeeper" owner="chcree" -->
    <dubbo:service interface="com.mingdong.core.service.RemoteProductService" ref="productApi" />
    <dubbo:service interface="com.mingdong.core.service.RemoteClientService" ref="clientApi" />
    <dubbo:service interface="com.mingdong.core.service.RemoteSysConfigService" ref="sysConfigApi" />

    <!-- 具体服务接口的实现 -->
    <bean id="productApi" class="com.mingdong.bop.service.impl.RemoteProductServiceImpl" />
    <bean id="clientApi" class="com.mingdong.bop.service.impl.RemoteClientServiceImpl" />
    <bean id="sysConfigApi" class="com.mingdong.bop.service.impl.RemoteSysConfigServiceImpl" />
</beans>