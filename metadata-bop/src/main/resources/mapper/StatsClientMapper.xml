<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.mingdong.bop.domain.mapper.StatsClientMapper">

    <select id="getAllClientCount" resultType="Long">
        select count(*) from `client`
    </select>

    <select id="getClientCountByDate" parameterType="Date" resultType="Long">
        select count(*) from `client` where `create_time` >= #{date}
    </select>

    <select id="getClientRechargeByDate" parameterType="Date" resultType="BigDecimal">
        select sum(`amount`) from `product_recharge` where create_time >= #{date}
    </select>

</mapper>